{
    "manifest_version": 3,
    "name": "Web Annotator",
    "version": "1.0.0",
    "description": "Draw, annotate, and highlight on any web page",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Web Annotator"
    },
    "web_accessible_resources": [
      {
        "resources": ["content.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }